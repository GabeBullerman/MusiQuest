<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_gravity="center"
                >

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:rotationX="25"

            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:text="MusiQuest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/Tan"
            android:textSize="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:rotationX="25"

            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:textColor="@color/Tan"
            android:text="Game over"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.765" />

    <TextView
            android:id="@+id/ScorePopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:rotationX="25"

            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="3"
            android:textColor="@color/SkyBlue"
            android:text="You Got 3 Stars!!!"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintTop_toBottomOf="@+id/Star2" />
    <ImageView
            android:id="@+id/Star1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleX="1.2"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/star"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/Star2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    <ImageView
            android:id="@+id/Star2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleX="1.2"
            app:layout_constraintVertical_bias="0.333"
            app:srcCompat="@drawable/star"
            app:layout_constraintEnd_toStartOf="@+id/Star3"
            app:layout_constraintStart_toEndOf="@+id/Star1"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/textView3" />


    <ImageView
            android:id="@+id/Star3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleX="1.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Star2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/star"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="1.0" />

    <Button
            android:id="@+id/MainMenu"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/Tan"
            android:text="Main Menu"
            android:textSize="15dp"
            android:textColor="@color/Black"
            app:iconTint="#000000"
            app:rippleColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.857"
            app:layout_constraintEnd_toStartOf="@+id/NextLevel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

    <Button
            android:id="@+id/NextLevel"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/Tan"
            android:text="Next Level"
            android:textSize="15dp"
            android:textColor="@color/Black"
            app:iconTint="#000000"
            app:rippleColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/MainMenu" />


</androidx.constraintlayout.widget.ConstraintLayout>