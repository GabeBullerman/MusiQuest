<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">
    <Button
            android:id="@+id/BtnA"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:backgroundTint="#000000"
            android:text="Fake Anwser A"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.731"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.591" />

    <Button
            android:id="@+id/BtnB"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:backgroundTint="#000000"
            android:text="Fake Anwser B"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/BtnA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/BtnA"
            app:layout_constraintStart_toStartOf="@+id/BtnA" />

    <Button
            android:id="@+id/BtnC"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:backgroundTint="#000000"
            android:text="Fake Anwser C"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/BtnA"
            app:layout_constraintEnd_toEndOf="@+id/BtnA"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/BtnB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    <Button
            android:id="@+id/BtnD"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:backgroundTint="#000000"
            android:text="Fake Anwser D"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/BtnA"
            app:layout_constraintStart_toStartOf="@+id/BtnA"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/BtnC"
            app:layout_constraintBottom_toTopOf="@+id/submit"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="16dp" />


    <Button
            android:id="@+id/submit"
            android:layout_width="155dp"
            android:layout_height="51dp"
            android:backgroundTint="#000000"
            android:text="Submit"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BtnC"
            app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="108dp"
        android:layout_height="74dp"
        android:backgroundTint="#000000"
        android:text="Menu"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <TextView
            android:id="@+id/Question1"

            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="What Symbol is this? "
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/menuBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.444" />

    <TextView
            android:id="@+id/Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/Question1" />

    <ImageView
            android:id="@+id/Book"
            android:layout_width="322dp"
            android:layout_height="185dp"
            android:scaleX="1.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.524"
            app:srcCompat="@drawable/book_one" />



    <ImageView
            android:id="@+id/LevelQuestion"

            android:scaleX="1.2"
            app:srcCompat="@drawable/l1q1"
            android:layout_width="180dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuBtn"
            android:layout_marginTop="64dp"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    <ImageView
            android:id="@+id/Stars1"
            android:visibility="invisible"
            android:rotation="@integer/material_motion_duration_long_1"
            android:layout_width="364dp"
            android:layout_height="344dp"
            android:scaleX="1.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.524"
            app:srcCompat="@drawable/finalstars" />

</androidx.constraintlayout.widget.ConstraintLayout>